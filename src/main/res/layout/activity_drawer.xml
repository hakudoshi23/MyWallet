<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"/>

    <RelativeLayout
            android:id="@+id/drawer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:background="#FFF">

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/accounts"
                android:id="@+id/tag_list_item_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#888"
                android:textSize="16dp"
                android:textIsSelectable="false"/>

        <View
                android:id="@+id/separator"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#666"
                android:layout_below="@+id/tag_list_item_color"/>

        <ListView
                android:id="@+id/drawer_list"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:choiceMode="singleChoice"
                android:divider="#EEE"
                android:dividerHeight="1dp"
                android:background="#FFF"
                android:layout_below="@+id/separator"
                android:layout_above="@+id/relativeLayout3"/>

        <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_above="@+id/relativeLayout2"
                android:clickable="true"
                android:background="@drawable/drawer_options_background"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="openAddAccount">

            <ImageView
                    android:id="@+id/drawer_icon_add"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/ic_add"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/add_account"
                    android:id="@+id/drawer_text_add"
                    android:textColor="#888"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/drawer_icon_add"
                    android:layout_marginLeft="10dp"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_above="@+id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:background="@drawable/drawer_options_background"
                android:onClick="openTags">

            <ImageView
                    android:id="@+id/drawer_icon_tags"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/ic_tags"
                    android:layout_alignTop="@+id/drawer_text_tags"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/manage_tags"
                    android:id="@+id/drawer_text_tags"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/drawer_icon_tags"
                    android:layout_marginLeft="10dp"
                    android:textColor="#888"
                    android:textSize="20sp"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:background="@drawable/drawer_options_background"
                android:onClick="openSettings">

            <ImageView
                    android:id="@+id/drawer_icon_settings"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/ic_settings"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/settings"
                    android:id="@+id/drawer_text_settings"
                    android:layout_alignTop="@+id/drawer_icon_settings"
                    android:layout_toRightOf="@+id/drawer_icon_settings"
                    android:layout_marginLeft="10dp"
                    android:textColor="#888"
                    android:textSize="20sp"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>